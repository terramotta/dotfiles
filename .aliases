# Shortcuts for common commands
alias ll='ls -lah'          # List files with details in human-readable format
alias la='ls -A'            # List all files except for . and ..
alias l='ls -CF'            # List files with classification

# Navigation shortcuts
alias ..='cd ..'            # Go up one directory
alias ...='cd ../..'        # Go up two directories
alias ....='cd ../../..'    # Go up three directories

# File manipulation
alias mv='mv -i'            # Prompt before overwriting files
alias cp='cp -i'            # Prompt before overwriting files
alias rm='rm -i'            # Prompt before deleting files

# System update and upgrade (for Debian-based systems)
alias update='sudo apt update'              # Update package lists
alias upgrade='sudo apt upgrade'            # Upgrade installed packages
alias full-upgrade='sudo apt full-upgrade'  # Perform a full upgrade

# System cleanup
alias clean='sudo apt autoremove && sudo apt clean'  # Remove unused packages and clean cache

# Grep with color
alias grep='grep --color=auto'               # Highlight matching text in grep output
alias fgrep='fgrep --color=auto'             # Highlight matching text in fgrep output
alias egrep='egrep --color=auto'             # Highlight matching text in egrep output

# Quick file searches
alias find-text='grep -rnw'                  # Find text recursively in files

# Disk usage
alias du='du -h'                             # Human-readable format for disk usage
alias df='df -h'                             # Human-readable format for disk space usage

# Show system information
alias cpuinfo='lscpu'                        # Display CPU information
alias meminfo='free -h'                      # Display memory usage

# Network tools
alias ping='ping -c 4'                       # Ping with a limit of 4 packets
alias ports='netstat -tuln'                  # Show open ports

# Clear terminal screen
alias c='clear'                             # Clear the terminal screen